<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="36dp"
        android:padding="24dp"
        android:textStyle="bold"
        android:textSize="24dp"
        android:text="@string/welcome_message"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="108dp"
        android:textSize="18dp"
        android:text="@string/purpose_message"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="350dp"
        android:textStyle="bold"
        android:textSize="18dp"
        android:text="@string/instruction_message"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/sohreButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="@string/sohre_button">
        </Button>

        <Button
            android:id="@+id/pittmanButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pittman_button"
            android:layout_marginTop="2dp">
        </Button>

        <Button
            android:id="@+id/noreliusButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/norelius_button"
            android:layout_marginTop="2dp">
        </Button>
    </LinearLayout>

</FrameLayout>

